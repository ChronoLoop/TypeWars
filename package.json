{
    "name": "typingracer-clone",
    "version": "1.0.0",
    "description": "TypeRacer is an online multiplayer typing game. This is a clone of the TypeRacer game.",
    "main": "server.js",
    "scripts": {
        "setup": "npm install && npm run setup-client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "install-all": "concurrently \"npm install\" \"npm install --prefix client\"",
        "client": "npm run start --prefix client",
        "server": "nodemon --watch server ./server/server.js",
        "build": "npm run build --prefix client",
        "start": "node server/server.js",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "dependencies": {
        "concurrently": "^5.3.0",
        "express": "^4.17.1",
        "mongoose": "^5.11.12",
        "socket.io": "^3.1.0"
    },
    "author": "Kevin Wang",
    "license": "ISC",
    "devDependencies": {
        "dotenv": "^8.2.0",
        "eslint": "^7.17.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-flowtype": "^4.7.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.1.2",
        "nodemon": "^2.0.7",
        "prettier": "^2.1.2"
    }
}
